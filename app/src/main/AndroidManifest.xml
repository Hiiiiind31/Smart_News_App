<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="brand.smart_news_app">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Fonts.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.Activity_Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.Activity_Signup" />
        <activity android:name=".Activities.Activity_Signin" />
        <activity android:name=".Activities.Activity_Change_Password" />
        <activity
            android:name=".Activities.Activity_Main"
            android:label="@string/title_activity__main"
            android:theme="@style/AppTheme" />
        <activity android:name=".Activities.Activity_Search" />
        <activity android:name=".Activities.Activity_ResetPassword" />
        <activity android:name=".Activities.Activity_Receive_Code" />
        <activity android:name=".Activities.Activity_Call_us" />
        <activity android:name=".Activities.Activity_Notifications" />
        <activity android:name=".Activities.Activity_V_Details"></activity>
    </application>

</manifest>